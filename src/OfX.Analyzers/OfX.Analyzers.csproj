<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <TargetFrameworks>net9.0;net8.0</TargetFrameworks>
        <LangVersion>default</LangVersion>
        <Version>8.2.6</Version>
        <Authors>Quy Vu</Authors>
        <PackageId>OfX-Analyzers</PackageId>
        <Description>The Expression Analyzers for OfX</Description>
        <PackageTags>OfX;mappable;open-source;expression-analyzers</PackageTags>
        <RepositoryUrl>https://github.com/quyvu01/OfX</RepositoryUrl>
        <PackageIcon>OfX.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <!-- Analyzer-specific settings -->
        <IsRoslynComponent>true</IsRoslynComponent>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IsPackable>true</IsPackable>
        <DevelopmentDependency>true</DevelopmentDependency>
        <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <!-- Roslyn analyzer packages -->
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.8.0" PrivateAssets="all"/>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\OfX.png">
            <Pack>True</Pack>
            <PackagePath/>
            <Link>OfX.png</Link>
        </None>
        <None Include="README.md" Pack="true" PackagePath="\"/>
        <None Include="..\..\LICENSE" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
      <Compile Include="..\OfX\Expressions\Nodes\AggregationNode.cs">
        <Link>Nodes\AggregationNode.cs</Link>
      </Compile>
      <Compile Include="..\OfX\Expressions\Nodes\BinaryConditionNode.cs">
        <Link>Nodes\BinaryConditionNode.cs</Link>
      </Compile>
      <Compile Include="..\OfX\Expressions\Nodes\BooleanFunctionNode.cs">
        <Link>Nodes\BooleanFunctionNode.cs</Link>
      </Compile>
      <Compile Include="..\OfX\Expressions\Nodes\CoalesceNode.cs">
        <Link>Nodes\CoalesceNode.cs</Link>
      </Compile>
      <Compile Include="..\OfX\Expressions\Nodes\ExpressionNode.cs">
        <Link>Nodes\ExpressionNode.cs</Link>
      </Compile>
      <Compile Include="..\OfX\Expressions\Nodes\FilterNode.cs">
        <Link>Nodes\FilterNode.cs</Link>
      </Compile>
      <Compile Include="..\OfX\Expressions\Nodes\FunctionNode.cs">
        <Link>Nodes\FunctionNode.cs</Link>
      </Compile>
      <Compile Include="..\OfX\Expressions\Nodes\GroupByNode.cs">
